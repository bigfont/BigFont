<div id="website-title">

    <div class="container">


                @if (Html.MvcSiteMap().SiteMapTitle().ToString().Contains("Home"))
                {
                    //Homepage
                    <div class="text-center">
                        <img alt="The BigFont logo is a crest."
                             src="~/Images/logo-crest-colors-tokopa-md.png"
                             title="The BigFont.ca Logo" />
                        <h1>
                            @Html.MvcSiteMap().SiteMapTitle()
                        </h1>
                    </div>
                }
                else
                {
                    // Other pages
                    <h1>
                        <img alt="The BigFont logo is a crest."
                             class="logo"
                             src="~/Images/logo-crest-colors-tokopa-xs.png"
                             title="The BigFont.ca Logo" />
                        @Html.MvcSiteMap().SiteMapTitle()
                    </h1>
                }

    </div>
</div>
