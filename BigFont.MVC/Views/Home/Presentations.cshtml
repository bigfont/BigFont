@using BigFont.MVC.ViewModels

    <section id="presentations" class="toc-hidden">

        @MyHelpers.BigFontTocSectionHeader(Html, "Presentations, Workshops, and Lectures")

        <p>
            BigFont Technology offers a wide variety of public talks, workshops, and training programs for the public and for software professionals. All presentations are made by staff or affiliates of BigFont. Read on for details, upcoming presentations and past events.
        </p>

    </section>

