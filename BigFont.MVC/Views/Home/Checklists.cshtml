@{

    ViewBag.MetaDescription = "We think that the more of the following boxes you can tick, the better your website is.";
    ViewBag.MetaKeywords = "website, website development, website design, salt spring, salt spring island";
    ViewBag.Title = "BigFont.ca | Checklists";
}

<section class="toc-hidden">

            @MyHelpers.BigFontTocSectionHeader(Html, "What makes a website good?")
            <p>We think that the more of the following boxes you can tick, the better your website is.</p>

</section>

<section id="browser-testing">


            @MyHelpers.BigFontTocSectionHeader(Html, "Cross Browser Testing")
