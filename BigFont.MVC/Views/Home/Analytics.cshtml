@model Google.Apis.Analytics.v3.Data.GaData

@section header
{
    <h1>@Html.MvcSiteMap().SiteMapTitle()</h1>
}

@section subnav
{

}


<section class="toc-ignore-section">

    <header>
        <h1>Simplified Google Analytics</h1>
    </header>

    <table class="table">
        <tbody>
            <tr>
                @foreach (var header in Model.ColumnHeaders)
                {
                    System.Globalization.TextInfo myTextInfo = new System.Globalization.CultureInfo("en-CA", false).TextInfo;
                    string myHeader = header.Name.Replace("ga:", string.Empty);
                    <td>
                        @myTextInfo.ToTitleCase(myHeader)
                    </td>
                }
            </tr>
            <tr>
                @for(int i = 0; i < Model.Rows.Count; ++i)
                {                    
                    if(i == 0) { continue; }
                    foreach (var cell in Model.Rows[i])
                    {
                        <td>@cell</td>
                    }
                }
            </tr>
        </tbody>
    </table>

</section>
