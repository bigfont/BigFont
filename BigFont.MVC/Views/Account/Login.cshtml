@model BigFont.MVC.Models.LoginModel

@section header
{
    <h1>@Html.MvcSiteMap().SiteMapTitle()</h1>
}

@section subnav
{

}

<section>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @MyHelpers.BootstrapTextboxControlGroup("inputEmail", "Email", "Email", "text");
        @MyHelpers.BootstrapTextboxControlGroup("inputPassword", "Password", "Password", "Password");

        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox"> Remember me
                </label>
                <button type="submit" class="btn">Sign in</button>
            </div>
        </div>

    }

</section>